<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h2 id="room" data-room="<%= @room.id %>" data-user="<%= current_user.id %>"><%= @user.name %> さんとのチャット</h2>

      <div class="message" style="width: 400px;">
        <% @chats.each do |chat| %>
          <% if chat.user_id == current_user.id %>
            <p style="text-align: right;"><%= chat.message %></p>
          <% else %>
            <p style="text-align: left;"><%= chat.message %></p>
          <% end %>
        <% end %>
      </div>
            
      <%= form_with model: @chat do |f| %>
        <%= f.text_field :message, :placeholder => "メッセージを入力して下さい" , :size => 30 %>
        <%= f.hidden_field :room_id %>
        <%= f.submit "送信する" %>
      <% end %>
    </div>
  </div>
</div>